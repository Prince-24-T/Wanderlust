<%- layout("./layout/boilerplate")-%>

 <style>
 #filters{
  display: flex;
  flex-wrap: wrap;
  align-items: center;

 }
 .filter{
  text-align: center;
  margin-right: 1.5rem;
  margin-top: 1.5rem;
  opacity: 0.7;
}
.filter:hover{
  opacity: 1;
  cursor: pointer;
}
.texs-info{
  display: none;
}

.text-toggle{
margin-left: 5rem;

  border: 1px solid black;
  border-radius: 0.6rem;
  padding-left: 1rem;
  padding-right: 1rem;
  padding-top: 0.4rem;
  height: 2.5rem;
}
 </style>
    <!-- <h1>All listings</h1> -->
     <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Tranding</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Mountain-city</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>mountain</p>
      </div>
     
      <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>


    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beach</p>
    </div>
  
    <div class="filter">
      <div><i class="fa-solid fa-sailboat"></i></div>
      <p>Boats</p>
    </div>
    <div class="filter">
    <div><i class="fa-solid fa-water"></i></div>
    <p>Lake</p>
  </div>

 <div class="text-toggle">
  <div class="form-check-reverse form-switch ">
    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
    <label class="form-check-label" for="switchCheckDefault">Display total after texes</label>
  </div>
</div>
     </div>
    <!-- <form action="/listings/new" method="GET">
        <button>New listing</button>
    </form> -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListing){ %>
      <a href="/listings/<%=listing.id%>" class="listing-link">
        <div class="card col listing-card" >
            <img src="<%=listing.image.url%>" class="card-img-top" alt="listingimage"  style="height: 20rem">
            <div class="card-img-overlay">
                
            </div>
            <div class="card-body">
              <p class="card-text">
               <b><%=listing.title%></b>
                <br>
                &#8377; <%=listing.price%>/night
                <i class="texs-info"> &nbsp; +18% GST</i>
              </p>
            </div>
          </div>
      </a>
      <% } %>
  </div>

<script>
  let textSwitch = document.getElementById("switchCheckDefault");
  textSwitch.addEventListener("click",()=>{
    let texsInfo = document.getElementsByClassName("texs-info");
  for(let info of texsInfo){
    if( info.style.display !="inline"){
        info.style.display ="inline";
    }
    else{
      info.style.display ="none";
    }
   

  }

  });
</script>
  
    



